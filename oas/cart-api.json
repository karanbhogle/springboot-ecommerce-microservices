{
    "openapi": "3.0.0",
    "info": {
        "title": "Cart Service API",
        "version": "1.0.0",
        "description": "API endpoints for managing shopping carts"
    },
    "paths": {
        "/cart/{userId}/items": {
            "post": {
                "summary": "Add Item to Cart",
                "description": "Add a single item with desired quantity to the user's cart",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "User ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "productId": {
                                        "type": "integer"
                                    },
                                    "quantity": {
                                        "type": "integer"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Item added to cart successfully"
                    }
                }
            },
            "delete": {
                "summary": "Remove Item from Cart",
                "description": "Remove a product from the user's cart",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "User ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "productId",
                        "in": "query",
                        "description": "Product ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Product removed from cart successfully"
                    }
                }
            }
        }
    }
}